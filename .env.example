# Environment Configuration
# Options: development, staging, production
ENVIRONMENT=development

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
# SQLite (default for development)
DATABASE_URL=sqlite:///./news_aggregator.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/news_aggregator

# Application Settings
FETCH_INTERVAL_MINUTES=30
MAX_ARTICLES_PER_FEED=10
SUMMARY_MAX_TOKENS=500

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# CORS Settings
# For development: localhost is configured automatically
# For production: MUST set comma-separated list of allowed origins
# Example: CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Frontend URL (for staging/production)
FRONTEND_URL=https://your-domain.com

# Security
# Admin API key for protected endpoints (optional, for future use)
# ADMIN_API_KEY=generate_a_strong_random_key_here
